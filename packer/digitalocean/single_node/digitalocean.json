{
  "variables": {
    "api_token": "{{env `DIGITAL_OCEAN`}}",
    "image": "docker-18-04",
    "region": "nyc3",
    "size": "512mb",
    "tag": "Latest",
    "ssh_username": "root"
  },
  "builders": [
    {
      "type": "digitalocean",
      "image": "{{user `image`}}",
      "api_token": "{{user `api_token`}}",
      "snapshot_name": "posthog-solo-{{user `tag`}}",
      "size": "{{user `size`}}",
      "region": "{{user `region`}}",
      "ssh_username": "{{user `ssh_username`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt-get update",
        "sudo apt -y install apt-transport-https ca-certificates curl git gnupg-agent software-properties-common",
        "git clone https://github.com/PostHog/deployment.git",
        "cd deployment/terraform/digitalocean/single_node",
        "sudo docker-compose -f docker-compose.do.yml up -d"
      ]
    }
  ]
}
